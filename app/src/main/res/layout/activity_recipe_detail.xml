<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">

    <TextView
        android:id="@+id/recipe_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/recipe_detail_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_title"
        android:layout_margin="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recipe_detail_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_ingredients"
        android:layout_margin="16dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/back_to_recipes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Recipes"
        android:layout_below="@id/recipe_detail_instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
